pipeline {
    agent any
    
    environment {
        dockerHome = tool 'Mydocker'
        binpath = '/bin'       
    }

    stages {
        stage('Initialize') {
            steps {
                script {
                    env.PATH = env.dockerHome + env.binpath + env.PATH
                }           
            }
        }

        stage('Get-Node') { 
            agent {    
                docker {
                    image 'node:8-alpine'
                    args '-p 3000:3000'
                }
            }    
            steps {
                echo "Node built"
            }    
        }
    
        stage('Build') { 
            steps {
                sh 'npm run build' 
            }
        }
    }
}