pipeline {
    agent any

        stage('Get-Node') { 
            agent {    
                docker {
                    image 'node:8-alpine'
                    args '-p 3000:3000'
                }
            }    
            steps {
                echo "Node built"
            }    
        }
    
        stage('Build') { 
            steps {
                sh 'npm run build' 
            }
        }
    }
}