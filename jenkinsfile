pipeline {
    agent any
    
    environment {
        dockerHome = tool 'Mydocker'
        binpath = '/bin:'    
    }

    stages {
        stage('Get-Node') { 
            agent {    
                    docker {
                        image 'node:9-alpine'
                        args '-p 3000:3000'
                    }
                }
            steps {
                echo "Node built"
            }    
        }
    
        stage('Build') { 
            steps {
                sh 'npm run build' 
            }
        }
    }
}