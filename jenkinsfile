pipeline {
    agent any
    
    environment {
        dockerHome = tool 'Mydocker'
        binpath = '/bin:'
        dockerPath = '/usr/local/bin:'      
    }

    stages {
        stage('Initialize') {
            steps {
                script {
                    env.PATH = env.dockerHome + env.binpath + dockerPath + env.PATH
                    echo env.PATH
                }           
            }
        }

        stage('Get-Node') { 
            agent {    
                    docker {
                        image 'node:9-alpine'
                        args '-p 3000:3000'
                    }
                }
            steps {
                echo "Node built"
            }    
        }
    
        stage('Build') { 
            steps {
                sh 'npm run build' 
            }
        }
    }
}