pipeline {
    agent {
        label 'docker'
    }

    stages {
        stage('Get Node') {
            steps{
                agent {
                    docker {
                        label 'docker'
                        image 'node:8-alpine'
                        args '-p 3000:3000'
                    }    
                }
            }
        }

        stage('Build') { 
            steps {
                sh 'npm run build' 
            }
        }
    }
}