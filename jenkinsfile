pipeline {
    agent any
    
    environment {
        dockerHome = tool 'Mydocker'
        binpath = '/bin:'      
    }

    stages {
        stage('Initialize') {
            steps {
                script {
                    env.PATH = env.dockerHome + env.binpath + env.PATH
                    echo env.PATH
                }           
            }
        }

        stage('Get-Node') { 
            steps {
                script {
                    docker.withTool('Mydocker') {   
                        docker {
                            image 'node:9-alpine'
                            args '-p 3000:3000'
                        }
                    }
                }
            }
        }
    
        stage('Build') { 
            steps {
                sh 'npm run build' 
            }
        }
    }
}